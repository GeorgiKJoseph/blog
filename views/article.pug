extend layout

block content
    h1= article.title
    h5 Written by #{author}
    br
    .container
        p= article.body
    br
    if user
        if user.id == article.author
            a.btn.btn-default(href='/article/edit/'+article.id) Edit
            a.btn.btn-danger.delete-article(href='#', data-id=article._id) Delete